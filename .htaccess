# .htaccess - Security and Performance Configuration

# Enable rewrite engine
RewriteEngine On

# Security Headers
<IfModule mod_headers.c>
    # CSP Header
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' https://www.google.com https://www.gstatic.com 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self'"
    
    # Security Headers
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # HSTS (force HTTPS)
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
    
    # CORS for API
    Header set Access-Control-Allow-Origin "https://salmanyahya.com https://www.salmanyahya.com"
    Header set Access-Control-Allow-Methods "POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
</IfModule>

# Protect sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<Files "email.php|config.php|\.(sql|log|ini|env)$">
    Order allow,deny
    Deny from all
</Files>

# Protect config directory
<Directory "config">
    Order allow,deny
    Deny from all
</Directory>

# Protect data directory
<Directory "data">
    Order allow,deny
    Deny from all
</Directory>

# Protect logs directory
<Directory "logs">
    Order allow,deny
    Deny from all
</Directory>

# Restrict access to PHP files
<Files "send-email.php">
    # Only allow POST requests
    RewriteCond %{REQUEST_METHOD} !POST
    RewriteRule ^ - [R=405,L]
    
    # Block direct access from other domains
    RewriteCond %{HTTP_REFERER} !^https://(www\.)?salmanyahya\.com/ [NC]
    RewriteCond %{HTTP_REFERER} !^$
    RewriteRule \.php$ - [F,L]
</Files>

# Prevent directory listing
Options -Indexes

# Custom error pages
ErrorDocument 400 /error/400.html
ErrorDocument 403 /error/403.html
ErrorDocument 404 /error/404.html
ErrorDocument 405 /error/405.html
ErrorDocument 429 /error/429.html
ErrorDocument 500 /error/500.html

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript application/json
</IfModule>

# Caching
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    
    # HTML
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Prevent access to .git directory
RedirectMatch 404 /\.git

# Force HTTPS (uncomment when SSL is configured)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

# URL Rewriting for clean URLs (optional)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)\.html$ $1 [L,R=301]

# Block bad bots
SetEnvIfNoCase User-Agent "badbot" bad_bot